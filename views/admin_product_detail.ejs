<%- include('partials/header', { title: 'Détails du produit', user, role }) %>

<div class="admin-content-wrapper">

<div class="container-fluid px-3 mt-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">
        <%= product.nom %>
        <% if (product.is_active) { %>
          <span class="badge bg-success">Actif</span>
        <% } else { %>
          <span class="badge bg-secondary">Inactif</span>
        <% } %>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mb-3">
      <div class="d-flex gap-2">
        <a href="/admin/products/<%= product.id %>/edit" class="btn btn-primary">
          <i class="bi bi-pencil me-2"></i>Modifier
        </a>
        <a href="/admin/products/vue" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-lg-4 mb-3">
      <% if (product.image_url) { %>
        <div class="card mb-3">
          <div class="card-header">
            <h5 class="card-title mb-0">Image</h5>
          </div>
          <div class="card-body text-center">
            <img src="<%= product.image_url %>"
                 alt="<%= product.nom %>"
                 class="img-fluid rounded"
                 style="max-height: 300px;">
          </div>
        </div>
      <% } %>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle me-2"></i>Informations
          </h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-5">Catégorie:</dt>
            <dd class="col-sm-7">
              <% if (product.categorie) { %>
                <span class="badge" style="background-color: <%= product.categorie_couleur || '#6c757d' %>">
                  <%= product.categorie %>
                </span>
              <% } else { %>
                <span class="text-muted">-</span>
              <% } %>
            </dd>

            <dt class="col-sm-5">Fournisseur:</dt>
            <dd class="col-sm-7">
              <% if (product.fournisseur_id) { %>
                <a href="/admin/suppliers/<%= product.fournisseur_id %>">
                  <%= product.fournisseur %>
                </a>
              <% } else { %>
                <span class="text-muted">-</span>
              <% } %>
            </dd>

            <% if (product.description) { %>
              <dt class="col-sm-5">Description:</dt>
              <dd class="col-sm-7"><%= product.description %></dd>
            <% } %>

            <% if (product.reference_fournisseur) { %>
              <dt class="col-sm-5">Réf. fournisseur:</dt>
              <dd class="col-sm-7"><%= product.reference_fournisseur %></dd>
            <% } %>

            <% if (product.code_ean) { %>
              <dt class="col-sm-5">Code EAN:</dt>
              <dd class="col-sm-7"><%= product.code_ean %></dd>
            <% } %>

            <% if (product.conditionnement) { %>
              <dt class="col-sm-5">Conditionnement:</dt>
              <dd class="col-sm-7"><%= product.conditionnement %></dd>
            <% } %>

            <% if (product.dlc_jours) { %>
              <dt class="col-sm-5">DLC:</dt>
              <dd class="col-sm-7"><%= product.dlc_jours %> jours</dd>
            <% } %>

            <% if (product.origine) { %>
              <dt class="col-sm-5">Origine:</dt>
              <dd class="col-sm-7"><%= product.origine %></dd>
            <% } %>

            <% if (product.label) { %>
              <dt class="col-sm-5">Labels:</dt>
              <dd class="col-sm-7">
                <span class="badge bg-success"><%= product.label %></span>
              </dd>
            <% } %>

            <% if (product.allergenes) { %>
              <dt class="col-sm-5">Allergènes:</dt>
              <dd class="col-sm-7">
                <span class="badge bg-warning text-dark"><%= product.allergenes %></span>
              </dd>
            <% } %>

            <dt class="col-sm-5">Créé le:</dt>
            <dd class="col-sm-7"><%= formatDateTime(product.created_at) %></dd>

            <% if (product.updated_at) { %>
              <dt class="col-sm-5">Modifié le:</dt>
              <dd class="col-sm-7"><%= formatDateTime(product.updated_at) %></dd>
            <% } %>
          </dl>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-journal-text me-2"></i>
            Catalogues utilisant ce produit (<%= catalogues.length %>)
          </h5>
        </div>
        <div class="card-body">
          <% if (catalogues.length === 0) { %>
            <div class="alert alert-info">
              <i class="bi bi-info-circle me-2"></i>
              Ce produit n'est encore présent dans aucun catalogue.
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover" id="cataloguesTable">
                <thead>
                  <tr>
                    <th>Catalogue</th>
                    <th>Date de livraison</th>
                    <th>Prix</th>
                    <th>Unité</th>
                    <th>Paniers</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% catalogues.forEach(catalogue => { %>
                    <tr>
                      <td>
                        <a href="/admin/catalogues/<%= catalogue.id %>/edit" class="text-decoration-none">
                          <%= catalogue.originalname %>
                        </a>
                      </td>
                      <td>
                        <%= formatDate(catalogue.date_livraison) %>
                      </td>
                      <td>
                        <strong><%= catalogue.prix.toFixed(2) %> €</strong>
                      </td>
                      <td>
                        <%= catalogue.unite || '-' %>
                      </td>
                      <td>
                        <span class="badge bg-info">
                          <%= catalogue.nb_paniers || 0 %> panier(s)
                        </span>
                      </td>
                      <td>
                        <a href="/admin/catalogues/<%= catalogue.id %>/edit"
                           class="btn btn-sm btn-outline-primary"
                           title="Voir le catalogue">
                          <i class="bi bi-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#cataloguesTable').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
      },
      order: [[1, 'desc']],
      pageLength: 25
    });
  });
</script>

</div>
<%- include('partials/footer') %>
