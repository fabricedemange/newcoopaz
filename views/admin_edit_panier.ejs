<%- include('partials/header', { title: 'Édition Panier (admin)', user, role }) %>

<div class="admin-content-wrapper">

<div class="container-fluid px-3 mt-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">Édition du panier (N°<%= panier.id %>)</h2>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Informations sur le panier</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Propriétaire :</dt>
            <dd class="col-sm-9"><%= panier.username %></dd>
            <dt class="col-sm-3">Catalogue :</dt>
            <dd class="col-sm-9"><%= panier.catalogue %> N°<%= panier.catalog_file_id %></dd>
            <dt class="col-sm-3">Note personnelle du propriétaire :</dt>
            <dd class="col-sm-9">
              <form action="/commandes/<%= panier.id %>/note" method="POST" class="mt-1">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="input-group input-group-sm">
                  <textarea name="note" rows="1" class="form-control" placeholder="Note personnelle pour cette commande..."><%= panier.note || '' %></textarea>
                  <button type="submit" class="btn btn-info btn-sm">Sauver</button>
                </div>
              </form>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Articles du panier</h5>
        </div>
        <div class="card-body">
          <% if (articles.length === 0) { %>
            <div class="alert alert-info text-center">
              <h6>Aucun article dans ce panier</h6>
              <p>Utilisez le formulaire ci-dessous pour ajouter des articles.</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Produit</th>
                    <th class="d-none d-md-table-cell">Description</th>
                    <th class="d-none d-sm-table-cell">Prix</th>
                    <th class="d-none d-lg-table-cell">Quantité</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% let totalPanier = 0; %>
                  <% articles.forEach(function(a) { %>
                    <% let totalLigne = a.prix * a.quantity; %>
                    <% totalPanier += totalLigne; %>
                    <tr>
                      <td>
                        <div class="fw-bold"><%= a.produit %></div>
                        <!-- Informations supplémentaires sur mobile -->
                        <div class="d-md-none small text-muted">
                          <%= a.description %>
                          <form action="/article/<%= a.id %>/note" method="POST" class="mt-1">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="input-group input-group-sm">
                              <textarea name="note" rows="1" class="form-control" placeholder="Note personnelle pour cet article..."><%= a.note || '' %></textarea>
                              <button type="submit" class="btn btn-info btn-sm">Sauver</button>
                            </div>
                          </form>
                        </div>
                        <div class="d-sm-none small text-muted">
                          Prix: <%= a.prix %> €
                        </div>
                        <div class="d-lg-none small text-muted">
                          Quantité: <%= a.quantity %>
                        </div>
                        <div class="d-md-none small text-success">
                          Total: <%= totalLigne.toFixed(2) %> €
                        </div>
                      </td>
                      <td class="d-none d-md-table-cell">
                        <%= a.description %>
                        <form action="/article/<%= a.id %>/note" method="POST" class="mt-1">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <div class="input-group input-group-sm">
                            <textarea name="note" rows="1" class="form-control" placeholder="Note personnelle pour cet article..."><%= a.note || '' %></textarea>
                            <button type="submit" class="btn btn-info btn-sm">Sauver</button>
                          </div>
                        </form>
                      </td>
                      <td class="d-none d-sm-table-cell">
                        <%= a.prix %> €
                      </td>
                      <td class="d-none d-lg-table-cell">
                        <span class="badge bg-primary"><%= a.quantity %></span>
                      </td>
                      <td class="text-end">
                        <!-- Actions sur mobile : menu déroulant -->
                        <div class="d-md-none">
                          <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                              Actions
                            </button>
                            <ul class="dropdown-menu">
                              <li>
                                <form method="POST" action="/admin/paniers/<%= panier.id %>/articles/remove">
                                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                  <input type="hidden" name="panier_article_id" value="<%= a.id %>">
                                  <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Retirer cet article ?')">
                                    Retirer l'article
                                  </button>
                                </form>
                              </li>
                            </ul>
                          </div>
                        </div>

                        <!-- Actions sur desktop : bouton -->
                        <div class="d-none d-md-block">
                          <form method="POST" action="/admin/paniers/<%= panier.id %>/articles/remove" style="display:inline">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="panier_article_id" value="<%= a.id %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Retirer cet article ?')">
                              Retirer l'article
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
                <tfoot>
                  <tr class="table-secondary">
                    <th colspan="4" class="text-end">Total du panier :</th>
                    <th class="text-end">
                      <span class="badge bg-success fs-6">
                        <%= totalPanier.toFixed(2) %> €
                      </span>
                    </th>
                  </tr>
                </tfoot>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>



  <!-- Formulaire d'ajout d'article -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Ajouter un article</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/admin/paniers/<%= panier.id %>/articles/add">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="row g-3">
              <div class="col-12 col-md-6">
                <label for="article_id" class="form-label">Article <span class="text-danger">*</span></label>
                <select name="article_id" id="article_id" class="form-select" required>
                  <option value="">Sélectionnez un article</option>
                  <% allArticles.forEach(function(art) { %>
                    <option value="<%= art.id %>">
                      <%= art.produit %> - <%= art.description %> - <%= art.prix %>€
                    </option>
                  <% }) %>
                </select>
              </div>
              <div class="col-12 col-md-3">
                <label for="quantity" class="form-label">Quantité <span class="text-danger">*</span></label>
                <input type="number" name="quantity" id="quantity" min="-5" step="<%= 0.1%>" value="1" 
                       class="form-control" required>
              </div>
              <div class="col-12 col-md-3">
                <label class="form-label d-none d-md-block">&nbsp;</label>
                <button type="submit" class="btn btn-success w-100">
                  Ajouter l'article
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Boutons de navigation -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="d-flex flex-column flex-sm-row gap-2">
        <a href="/admin/dashboard/vue" class="btn btn-secondary">
          Retour au tableau de bord
        </a>

        <a href="/admin/menu" class="btn btn-outline-secondary">
          Retour au menu admin
        </a>
      </div>
    </div>
  </div>
</div>

</div>
<%- include('partials/footer') %>
