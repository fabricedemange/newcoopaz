<%- include('partials/header') %>

<!-- Container pour l'application Vue -->
<div id="catalogue-detail-app">
  <!-- Loader initial -->
  <div class="admin-content-wrapper">
    <div class="container-fluid mt-4">
      <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
          <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-3 text-muted">Chargement du catalogue...</p>
      </div>
    </div>
  </div>
</div>

<!-- CSS spécifique pour le catalogue -->
<style>
/* Forcer le container à ne pas déborder */
.container-fluid {
  max-width: 100vw;
  overflow-x: hidden;
}

/* Vue mobile avec cartes */
@media (max-width: 768px) {
  .admin-content-wrapper .container-fluid {
    padding-left: 10px !important;
    padding-right: 10px !important;
  }

  .card {
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  .product-card-mobile {
    background-color: white;
  }

  .product-card-mobile.bg-success-subtle {
    background-color: #d1e7dd !important;
  }

  .product-card-mobile .quantity-input {
    font-size: 1.25rem !important;
    font-weight: bold;
  }
}

/* Améliorer les boutons +/- */
.qty-btn-minus, .qty-btn-plus {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  transition: all 0.2s;
}

.qty-btn-minus:hover:not(:disabled),
.qty-btn-plus:hover:not(:disabled) {
  background-color: #0d6efd;
  color: white;
  border-color: #0d6efd;
}

.qty-btn-minus:disabled,
.qty-btn-plus:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.quantity-input[type=number] {
  -moz-appearance: textfield;
}
</style>

<!-- Injecter le token CSRF pour les requêtes AJAX -->
<script>
window.CSRF_TOKEN = '<%= csrfToken %>';
</script>

<!-- App Vue (bundle Vite) -->
<script type="module" src="/dist/catalogue-detail.js?v=<%= typeof APP_VERSION !== 'undefined' ? APP_VERSION : Date.now() %>"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
