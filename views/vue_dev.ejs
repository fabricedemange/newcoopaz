<%- include('partials/header') %>

<!-- Sidebar inclus explicitement pour /vue-dev (menu gauche toujours visible) -->
<% if (typeof user !== 'undefined' && user && typeof role !== 'undefined' && role) { %>
<%- include('partials/admin_sidebar', {
  user,
  role,
  userPermissions: typeof userPermissions !== 'undefined' ? userPermissions : [],
  userRoles: typeof userRoles !== 'undefined' ? userRoles : []
}) %>
<% } %>

<style>
/* S'assurer que le sidebar et le bouton menu restent visibles (script chargé depuis Vite) */
#adminSidebar { z-index: 1000 !important; }
.mobile-menu-toggle { z-index: 1001 !important; }
.sidebar-overlay { z-index: 999 !important; }
/* Fix modal z-index au-dessus du sidebar */
.modal, .modal.show, .modal.d-block {
  z-index: 9999 !important; position: fixed !important;
  top: 0 !important; left: 0 !important; right: 0 !important; bottom: 0 !important;
  display: flex !important; align-items: center !important; justify-content: center !important;
}
.modal-backdrop, .modal-backdrop.show { z-index: 9998 !important; position: fixed !important; }
.modal-dialog { z-index: 10000 !important; position: relative !important; margin: auto !important; }
</style>

<!-- Container pour l'application Vue (chargée depuis Vite en dev) -->
<div id="home-app">
  <div class="admin-content-wrapper">
    <div class="container mt-5">
      <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
          <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-3 text-muted">Chargement de l'application...</p>
      </div>
    </div>
  </div>
</div>

<!-- App Vue (bundle buildé) : pas de 404, menu affiché comme sur /admin/dashboard/vue -->
<script type="module" src="/dist/home.js?v=<%= typeof APP_VERSION !== 'undefined' ? APP_VERSION : Date.now() %>"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
