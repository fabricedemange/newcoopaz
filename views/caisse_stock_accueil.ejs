<%- include('partials/header', { title: pageTitle || 'Stock', user, role }) %>

<style>
.stock-accueil-hero {
  background: linear-gradient(135deg, rgba(255, 235, 156, 0.4) 0%, rgba(255, 235, 156, 0.15) 50%, rgba(255, 248, 220, 0.3) 100%);
  border-radius: 1rem;
  border: 1px solid rgba(212, 166, 23, 0.25);
  padding: 2rem;
  margin-bottom: 2rem;
}
.stock-accueil-zone {
  background: #fff;
  border-radius: 1rem;
  border: 1px solid rgba(212, 166, 23, 0.2);
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  height: 100%;
}
.stock-accueil-zone:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
}
.stock-accueil-zone .zone-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.25rem;
  color: #495057;
  text-decoration: none;
  border-bottom: 1px solid #eee;
  transition: background 0.15s ease, color 0.15s ease;
}
.stock-accueil-zone .zone-link:last-child { border-bottom: none; }
.stock-accueil-zone .zone-link:hover {
  background: rgba(255, 235, 156, 0.25);
  color: #5c4610;
}
.stock-accueil-zone .zone-link i {
  width: 2rem;
  text-align: center;
  font-size: 1.25rem;
  color: #9a7b1a;
}
</style>

<div class="admin-content-wrapper">
  <div class="container-fluid mt-4">
    <div class="stock-accueil-hero">
      <h1 class="mb-2" style="color: #7a5e12;"><i class="bi bi-box-seam me-2"></i>Stock</h1>
      <p class="text-muted mb-0">Inventaire, réceptions de commandes et mouvements de stock.</p>
    </div>

    <div class="row g-4">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="stock-accueil-zone">
          <a href="/caisse/inventaire" class="zone-link">
            <i class="bi bi-upc-scan"></i>
            <span><strong>Inventaire</strong><br><small class="text-muted">Scanner et compter les produits, appliquer l'inventaire</small></span>
          </a>
          <a href="/caisse/receptions" class="zone-link">
            <i class="bi bi-truck"></i>
            <span><strong>Réceptions</strong><br><small class="text-muted">Enregistrer les livraisons fournisseurs, valider les stocks</small></span>
          </a>
          <a href="/caisse/stock-mouvements" class="zone-link">
            <i class="bi bi-arrow-left-right"></i>
            <span><strong>Mouvements stock</strong><br><small class="text-muted">Historique des mouvements (ventes, inventaires, réceptions)</small></span>
          </a>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="stock-accueil-zone">
          <div class="stock-accueil-zone-header px-3 py-2 small text-muted border-bottom" style="background: rgba(255,235,156,0.2);">À mettre en avant (avec du volume)</div>
          <a href="/caisse/stock-produits-jamais-vendus" class="zone-link">
            <i class="bi bi-box-seam"></i>
            <span><strong>Produits jamais vendus</strong><br><small class="text-muted">Produits en catalogue sans aucune vente</small></span>
          </a>
          <a href="/caisse/stock-produits-limite" class="zone-link">
            <i class="bi bi-graph-down"></i>
            <span><strong>Vendus régulièrement en limite de stock</strong><br><small class="text-muted">Produits souvent vendus dont le stock approche du seuil</small></span>
          </a>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <a href="/admin/administration" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Retour Administration</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
