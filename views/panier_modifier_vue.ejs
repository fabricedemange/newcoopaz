<%- include('partials/header') %>

<!-- Container pour l'application Vue -->
<div id="panier-app">
  <!-- Loader initial -->
  <div class="admin-content-wrapper">
    <div class="container-fluid mt-4">
      <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
          <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-3 text-muted">Chargement de l'application...</p>
      </div>
    </div>
  </div>
</div>

<!-- Injecter le token CSRF pour les requêtes AJAX -->
<script>
window.CSRF_TOKEN = '<%= csrfToken %>';
</script>

<!-- CSS pour animation spinner et responsive -->
<style>
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
.spin {
  animation: spin 1s linear infinite;
  display: inline-block;
}

/* Forcer le container à ne pas déborder */
.container-fluid {
  max-width: 100vw;
  overflow-x: hidden;
}

/* Forcer les tables à s'adapter à la largeur */
.table-responsive {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

/* S'assurer que le contenu des cellules ne dépasse pas */
.table td, .table th {
  word-wrap: break-word;
  overflow-wrap: break-word;
  max-width: 200px;
}

/* Vue mobile avec cartes - jusqu'à 991px */
@media (max-width: 991px) {
  /* Réduire les paddings du container sur mobile */
  .admin-content-wrapper .container-fluid {
    padding-left: 10px !important;
    padding-right: 10px !important;
  }

  /* Réduire les marges des cartes sur mobile */
  .card {
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  /* Cartes de produits sur mobile */
  .product-card-mobile {
    background-color: white;
  }

  .product-card-mobile.bg-success-subtle {
    background-color: #d1e7dd !important;
  }

  /* Ajuster les boutons +/- pour mobile */
  .product-card-mobile .qty-btn-minus,
  .product-card-mobile .qty-btn-plus {
    font-size: 1.2rem;
  }

  /* Input quantité plus lisible sur mobile */
  .product-card-mobile .quantity-input {
    font-size: 1.25rem !important;
    font-weight: bold;
  }
}

/* Améliorer les boutons +/- */
.qty-btn-minus, .qty-btn-plus {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  transition: all 0.2s;
}

.qty-btn-minus:hover:not(:disabled),
.qty-btn-plus:hover:not(:disabled) {
  background-color: #0d6efd;
  color: white;
  border-color: #0d6efd;
}

.qty-btn-minus:disabled,
.qty-btn-plus:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Masquer les flèches natives des inputs number sur Chrome/Safari */
.quantity-input::-webkit-inner-spin-button,
.quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Masquer les flèches natives des inputs number sur Firefox */
.quantity-input[type=number] {
  -moz-appearance: textfield;
}

/* Ajustements pour écrans moyens (992px - 1199px) */
@media (min-width: 992px) and (max-width: 1199px) {
  /* Réduire la police et les paddings */
  .table td, .table th {
    font-size: 0.85rem;
    padding: 0.5rem 0.25rem;
  }

  /* Limiter la largeur de la description */
  .table td .product-description {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 180px;
  }

  /* Réduire taille des boutons */
  .quantity-input {
    width: 55px !important;
    font-size: 0.9rem !important;
  }

  .qty-btn-minus, .qty-btn-plus {
    width: 30px !important;
    height: 30px !important;
    padding: 0 !important;
    font-size: 0.9rem !important;
  }

  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
  }

  /* Réduire espacement dans les inputs */
  .d-flex.gap-1 {
    gap: 0.25rem !important;
  }
}

/* Améliorer pour grands écrans (1200px+) */
@media (min-width: 1200px) {
  .table td, .table th {
    padding: 0.75rem 0.5rem;
  }
}
</style>

<!-- App Vue (bundle Vite) -->
<script type="module" src="/dist/panier-detail.js?v=<%= typeof APP_VERSION !== 'undefined' ? APP_VERSION : Date.now() %>"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
